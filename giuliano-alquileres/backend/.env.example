# ==================================
# CONFIGURAÇÃO DO BANCO DE DADOS
# ==================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=sua_senha_aqui
DB_NAME=giuliano_alquileres
DB_NAME_TEST=giuliano_alquileres_test

# ==================================
# JWT E SEGURANÇA
# ==================================
# IMPORTANTE: Gere uma chave segura aleatória
# Exemplo: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=seu_jwt_secret_super_seguro_aqui_com_no_minimo_32_caracteres

# ==================================
# SERVIDOR
# ==================================
PORT=3001
NODE_ENV=development  # development | production | test

# ==================================
# UPLOAD DE ARQUIVOS
# ==================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB em bytes

# ==================================
# CORS (Frontend URLs permitidas)
# ==================================
CORS_ORIGIN=http://localhost:5173

# ==================================
# PRODUÇÃO (Render/Heroku)
# ==================================
# DATABASE_URL=postgresql://user:password@host:port/database
# Esta variável é definida automaticamente pelo provedor de hospedagem

# ==================================
# EMAIL (Sistema de Notificações)
# ==================================
# Para Gmail, você precisa criar uma "Senha de App":
# 1. Acesse: https://myaccount.google.com/security
# 2. Ative "Verificação em duas etapas"
# 3. Vá em "Senhas de app" e gere uma senha
# 4. Use essa senha aqui (não sua senha normal)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app-aqui
EMAIL_FROM=noreply@giulianoalquileres.com

# ==================================
# RATE LIMITING
# ==================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos em ms
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_REGISTER_MAX=3

# ==================================
# MERCADO PAGO (Sistema de Pagamento)
# ==================================
# Obtenha suas credenciais em: https://www.mercadopago.com.br/developers
# TESTE: Use as credenciais de teste para desenvolvimento
# PRODUÇÃO: Use as credenciais de produção para o site real
MERCADOPAGO_ACCESS_TOKEN=TEST-your-access-token-here
MERCADOPAGO_PUBLIC_KEY=TEST-your-public-key-here

# URLs para retorno após pagamento
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000
